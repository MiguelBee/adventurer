<div class="container-fluid">
	<% unless @backpackers.any? %>
		<h1>There aren't any Backpackers yet</h1>
	<% else %>
		<h2 class="text-center">Backpackers</h2>
		<br>
		<h5 class="adventurer_show_username float-left">Users</h5>
		<h5 class="adventurer_show_about text-center"> Description</h5>
		<div class="clear"></div>
		<hr />

		<% @backpackers.each do |backpacker| %>
		<div class="row">
			<div class="col-4">
				<%= link_to user_path(backpacker) do %>
				<div class="row">
					<%= image_tag(backpacker.avatars.last.picture, class: 'adventurers_show_image') if backpacker.avatars.any? %>
					<div class="clear"></div>
					<h5><%= backpacker.username %></h5>
				</div>
				<% end %>
			</div>
			<div class="col-8">
				<p><%= backpacker.about %></p>
			</div>
		</div>
		<hr />
		<% end %>
	<% end %>
</div>