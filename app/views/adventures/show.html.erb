<div class=header>
	<% if adventure_owner? %>
		<%= link_to "Delete Adventure", adventure_path(@adventure), method: :delete, data: {confirm: "Your adventure will be permanently deleted. Are you sure?"}, class: "btn btn-default" %>
		<%= link_to "Edit Adventure", "#", data: {toggle: "modal", target: "#editModal"}, class: "btn btn-default" %>
	<% end %>
	<h1><%= @adventure.title %></h1>
	<h3><%= @adventure.description %></h3>
</div>

<!-- Adventure Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Adventure</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <%= render 'edit' %> 
    </div>
  </div>
</div>